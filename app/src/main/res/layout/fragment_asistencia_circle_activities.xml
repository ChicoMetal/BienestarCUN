<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.co.edu.cun.www1104379214.bienestarcun.frragmentContent.AsistenciaCircleActivities"
    android:id="@+id/ContentAsistencias">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="top">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/contentListAsistentes">

            </LinearLayout>
        </ScrollView>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/btn_sendAsistencias"
            android:background="@color/backgroundBotton"
            android:enabled="false"
            android:layout_gravity="bottom"
            android:onClick="SaveAsistenciaItinerario" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idItinerario"
        android:visibility="invisible" />

</FrameLayout>
