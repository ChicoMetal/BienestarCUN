<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    android:padding="2dp"
    android:layout_height="240dp">

    <TextView
        android:id="@+id/ContentCC"
        android:layout_width="0dp"
        android:background="@color/accent_transparency"
        android:layout_height="0dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_chatPendientes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/img_circles_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_height="match_parent"
            android:background="@color/textWhite"
            android:layout_width="250dp">

            <ImageView
                android:id="@+id/img_pacientPsicologia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:contentDescription="@string/admin_circle_name" />


        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_msmPendiente"
                android:layout_width="match_parent"
                android:background="@color/accent_transparency"
                android:layout_height="40dp"
                android:layout_gravity="top"
                android:textColor="@color/textWhite"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/msmPendienteChat" />


        </FrameLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
