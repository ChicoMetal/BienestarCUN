<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
    app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:padding="2dp"
    android:layout_height="240dp">

    <ImageView
        android:id="@+id/img_activities"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/img_circles_background" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3">

            <FrameLayout
                android:background="@color/textWhite"
                android:layout_height="match_parent"
                android:layout_width="200dp">

                <ImageView
                    android:id="@+id/img_admin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/admin_circle_name" />


                <TextView
                    android:id="@+id/txt_administrator"
                    android:layout_width="match_parent"
                    android:background="@color/accent_transparency_admin"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|bottom"
                    android:textColor="@color/textWhite"
                    android:gravity="center" />

            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_nameCircle"
                    android:layout_width="match_parent"
                    android:background="@color/accent_transparency"
                    android:layout_height="40dp"
                    android:layout_gravity="top"
                    android:textColor="@color/textWhite"
                    android:gravity="center_vertical|center_horizontal" />


            </FrameLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:background="@color/accent_transparency"
            android:layout_gravity="bottom"
            android:textColor="@color/textWhite"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>


</android.support.v7.widget.CardView>
