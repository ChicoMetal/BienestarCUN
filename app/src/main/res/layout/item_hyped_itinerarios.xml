<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    android:padding="2dp">

    <ImageView
        android:id="@+id/img_itinerario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/itinerariosHyped" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_nameActiviti"
                android:layout_width="wrap_content"
                android:background="@color/accent_transparency"
                android:layout_height="40dp"
                android:layout_gravity="top|left"
                android:textColor="@color/textWhite"
                android:textAlignment="center"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginRight="1dp"
                android:layout_column="0"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txt_fechaActiviti"
                android:layout_width="wrap_content"
                android:background="@color/accent_transparency"
                android:layout_height="40dp"
                android:textColor="@color/textWhite"
                android:textAlignment="center"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginRight="1dp"
                android:layout_column="1"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txt_statusActiviti"
                android:layout_width="wrap_content"
                android:background="@color/accent_transparency"
                android:layout_height="40dp"
                android:textColor="@color/textWhite"
                android:textAlignment="center"
                android:layout_gravity="right"
                android:layout_column="2"
                android:layout_weight="1"
                android:gravity="center" />


        </TableRow>


    </LinearLayout>

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="match_parent"
        android:background="@color/accent_transparency"
        android:layout_height="76dp"
        android:layout_gravity="bottom"
        android:textColor="@color/textWhite"
        android:gravity="center"
        android:textAlignment="textStart" />


</android.support.v7.widget.CardView>