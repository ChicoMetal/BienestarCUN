<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.frragmentContent.HistoryLaboral_app"
    android:id="@+id/contentHistoryLaboral">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/txt_nameEmpresa"
            android:hint="@string/name_empresa_laboral"
            android:background="@color/BackgroundEDText"
            android:layout_marginTop="3dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/txt_cargoEmpresa"
            android:hint="@string/cargo_empresa_laboral"
            android:background="@color/BackgroundEDText"
            android:layout_marginTop="3dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/lb_startLaboral"
            android:id="@+id/textView6"
            android:gravity="center"
            android:layout_marginTop="10dp" />

        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pickerFechaLaboralStart"
            android:layout_gravity="center_horizontal"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lb_endLaboral"
                android:id="@+id/textView7"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="center" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lb_chk_aun_continua"
                android:id="@+id/chk_continua_trabajando"
                android:layout_marginLeft="5dp"
                android:checked="false" />

        </LinearLayout>

        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pickerFechaLaboralEnd"
            android:layout_gravity="center_horizontal"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            android:layout_weight="1"
            android:visibility="visible" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/btn_sendLaboral"
            android:layout_gravity="center_horizontal"
            android:background="@color/backgroundBotton"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/ic_btn_send"
            android:contentDescription="@string/atr_send_history_laboral"
            android:scaleType="fitCenter" />

    </LinearLayout>
</FrameLayout>
